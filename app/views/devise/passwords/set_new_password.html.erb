
<div style="width: 500px;text-align: center;letter-spacing: 2px">
  <h4>重新設定密碼</h4>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div style="font-size: 16px; margin-top: 20px;margin-bottom: 10px;letter-spacing: 1px">
        請輸入您的帳號 ( E-Mail )
      </div>

      <div>
        <%= f.email_field :email, :autofocus => true %>
      </div>

      <div><%= f.submit "確認" , { :class => 'btn btn-primary' } %></div>

      <div style="margin-top: 20px;font-size: 16px;letter-spacing: 1px;line-height: 24px">按下確認後，重新設定密碼連結<br>將會立刻寄送到您 E-Mail 信箱</div>
  <% end %>
</div>