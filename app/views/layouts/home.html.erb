          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-47160661-1', 'codream.tw');
      ga('send', 'pageview');

  </script>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    'home', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'home', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/fancybox/jquery.fancybox.css" type="text/css" media="screen" />
  <script type="text/javascript" src="/fancybox/jquery.fancybox.pack.js"></script>

  <!-- UserVoice JavaScript SDK (only needed once on a page) -->
  <script>(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/sF5ldGsjGJoCOLJrdnsA.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})()</script>

  <!-- A tab to launch the Classic Widget -->
  <script>
      UserVoice = window.UserVoice || [];
      UserVoice.push(['showTab', 'classic_widget', {
          mode: 'full',
          primary_color: '#ad0741',
          link_color: '#007dbf',
          default_mode: 'support',
          forum_id: 241700,
          topic_id: 49849,
          tab_label: '線上客服',
          tab_color: '#910515',
          tab_position: 'middle-left',
          tab_inverted: false
      }]);
  </script>



</head>
<body>
<div id="front_header">
  <div class="container">
    <div class="row-fluid">
      <div class = "span3">
        <a href="/">
          <img src="/assets/common/rae_logo_guest.png" alt="dingba" style="width: 200px;margin-top: 10px">
        </a>
      </div>

      <div class = "span3" style="margin-top: 60px;margin-left: -20px">
        <a href="/">
          <img src="/assets/common/slogan.png" alt="dingba" style="width: 240px">
        </a>
      </div>

      <div class="span6" style="margin-top: 17px;">
        <div id="logo_word">
          <span style="margin-left: 0px;font-size: 15px;width: 280px">
            <% if @booker.id.blank? %>
                <%= link_to "登入", booker_session_new_path(:res_url => @res_url) %> <span style="color:rgb(0, 0, 0)">|</span>
                <%= link_to "註冊", "/registrations/booker_new" %>
            <% elsif !@booker.id.blank? %>
                <div style="text-align: left;margin-top: 3px">
                  <span style="color: #000000">Hi,</span> <%= @booker.name %>
                </div>

                <span style="margin-top: 0px;float: left">
                <a href="/booker_manage/index" id="my_dingba" style="color: rgb(0, 0, 0)"><!--<span style="color:rgb(0, 0, 0)">|</span>--> 我的訂吧 <span style="color:rgb(0, 0, 0)">|</span></a>
                  <%= link_to "登出", destroy_u_session_path, method: :delete  %>
                </span>
            <% end %>
          </span>
        </div>
      </div>
      <% if !@booker.id.blank? && @booker.role == '0'  %>
          <a href="/restaurant#/calendar/restaurant_month" target="_blank"><img src="/assets/common/rae_my_restaurant.png" alt="dingba" id="go_pic"></a>
      <% end %>
      <img src="/assets/common/line.png" id="line">
    </div>
  </div>
</div>
<% if alert %>
    <script type="text/javascript">alert("<%= alert %>");</script>
<% end %>
<%= yield %>



<%= render :partial => 'layouts/footer' %>

</body>
</html>
