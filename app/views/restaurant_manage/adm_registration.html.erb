<html>
<head>
  <style type="text/css">
      #customers
      {
          font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
          width:800px;
          border-collapse:collapse;
      }

      #customers td, #customers th
      {
          font-size:1em;
          border:1px solid #98bf21;
          padding:3px 7px 2px 7px;
      }

      #customers th
      {
          font-size:1.1em;
          text-align:left;
          padding-top:5px;
          padding-bottom:4px;
          background-color:#A7C942;
          color:#ffffff;
      }

      #customers tr.alt td
      {
          color:#000000;
          background-color:#EAF2D3;
      }
  </style>
</head>

<body>

<%= link_to '<<Go Home>>', action: 'adm_index', method: :get  %>    Top 100 registration records.
<table id="customers">

  <tr >
    <th>ID</th>
    <th>User Name(mailto:)</th>
    <th>Type</th>
    <th>Login Count</th>
    <th>Allow Promot</th>
    <th>Gender</th>
    <th>Chanel</th>
    <th>Birthday</th>
    <th>Create at</th>
  </tr>

  <% @registration_list.each do |booker| %>
      <tr >
        <td><%= booker.id %> </td>
        <td>
          <a href='mailto:<%=  booker.email  %>'><%= booker.name %></a>
        </td>
        <td> <%= booker.role %>  </td>
        <td> <%= booker.sign_in_count %>  </td>
        <td> <%= booker.allow_promot %>  </td>
        <td> <%= booker.sex %> </td>
        <td> <%= booker.provider %> </td>
        <td> <%=
            if !booker.birthday.blank?
              booker.birthday.to_date
            end
            %> </td>
        <td> <%= booker.created_at.to_date %> </td>
      </tr>
  <% end %>
</table>

</body>
</html>